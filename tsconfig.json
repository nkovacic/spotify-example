{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react-native",
        "lib": ["es6", "dom"],
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "esnext",
        "baseUrl": "./",
        "paths": {
            "app/*": ["app/*"],
            "mocks/*": [ "__mocks__/*" ]
        }
    },
    "exclude": ["node_modules"]
}